BUILDFLAGS = -j8 TARGET=solaris CFLAGS=-D_XPG6
$(HAPROXY_EXEC): $(HAPROXY_SRC)/.git
	cd $(HAPROXY_SRC) && \
	    $(MAKE) $(BUILDFLAGS) && \
	    $(MAKE) install PREFIX=$(TOP)/$(HAPROXY_INSTALL)

DISTCLEAN_FILES += $(HAPROXY_INSTALL)

distclean::
	-cd $(HAPROXY_SRC) && $(MAKE) clean
