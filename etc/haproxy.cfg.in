global
        log 127.0.0.1 local0
        user nobody
        group nobody
        daemon
        maxconn 65535
        pidfile /var/run/haproxy.pid
        log-send-hostname %s
        stats socket /tmp/haproxy mode 0600 level admin


# http / https defaults
defaults
        balance leastconn
        log     global
        maxconn 65535
        mode http
        option forwardfor
        option httplog
        option redispatch
        no option httpclose
        no option http-server-close
        retries 3
        timeout client  120000
        timeout connect 2000
        timeout server  240000
        errorfile 400 /opt/smartdc/muppet/etc/400.http
        errorfile 408 /opt/smartdc/muppet/etc/408.http
        errorfile 500 /opt/smartdc/muppet/etc/503.http
        errorfile 503 /opt/smartdc/muppet/etc/503.http
        errorfile 504 /opt/smartdc/muppet/etc/503.http

# External HTTPS service backend
%s

# External HTTP service backend
%s

# Internal HTTP service backends
%s

backend haproxy-stats_http
        stats enable
        stats refresh 30s
        stats uri /

# External HTTPS service frontend
%s

# External HTTP service frontend
%s

# Internal HTTP service frontend
%s

frontend stats_http
         bind %s:8080
         default_backend haproxy-stats_http

# TCP defaults
%s

# TCP backends
%s

# TCP frontends
%s
